# ========================================
# SSH TUNNEL CONFIGURATION
# ========================================
# SSH server hostname or IP address
SSH_HOST=your-ssh-server.com

# SSH username
SSH_USER=your-ssh-username

# SSH password (если используете аутентификацию по паролю)
SSH_PASSWORD=your-ssh-password

# SSH private key (если используете аутентификацию по ключу)
# SSH_PRIVATE_KEY=-----BEGIN OPENSSH PRIVATE KEY-----
# ... your private key content ...
# -----END OPENSSH PRIVATE KEY-----

# ========================================
# POSTGRES DATABASE CONFIGURATION
# ========================================
# Database host from SSH server perspective (usually localhost)
DB_HOST=localhost

# Database port (usually 5432)
DB_PORT=5432

# Database username
DB_USER=db_user

# Database password
DB_PASSWORD=db_password

# Database name
DB_NAME=db_name

# ========================================
# PRISMA DATABASE URL
# ========================================
# This URL points to the local tunnel port (5432) that forwards to remote DB
# Format: postgresql://username:password@localhost:5432/database_name
DATABASE_URL="postgresql://${DB_USER}:${DB_PASSWORD}@localhost:5432/${DB_NAME}"

# ========================================
# NEXTJS ENVIRONMENT
# ========================================
# Set to 'development' for local dev, 'production' for production
NODE_ENV=development
STAGE=LOCAL

# ========================================
# TELEGRAM BOT CONFIGURATION
# ========================================
# Telegram Bot Token from @BotFather
BOT_TOKEN=your_bot_token_here

# Telegram Bot Name (optional)
BOT_NAME=your_bot_name_here

# ========================================
# JWT AUTHENTICATION CONFIGURATION
# ========================================
# Secret key for JWT token signing (CHANGE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# JWT token expiration time (default: 1h)
JWT_EXPIRES_IN=1h

# Refresh token expiration time (default: 7d)
REFRESH_TOKEN_EXPIRES_IN=7d

# ========================================
# PRISMA LOGGING CONFIGURATION
# ========================================
# Prisma log levels (comma-separated): query, info, warn, error
# Examples:
# - PRISMA_LOG_LEVELS=error (only errors)
# - PRISMA_LOG_LEVELS=warn,error (warnings and errors)
# - PRISMA_LOG_LEVELS=query,info,warn,error (all logs)
PRISMA_LOG_LEVELS=error

# ========================================
# LOGGER SERVICE CONFIGURATION
# ========================================
# URL сервиса логирования для отправки клиентских ошибок
# Example: LOGGER_URL=https://your-logger-service.com/api/logs
LOGGER_URL=your_logger_service_url_here

# Telegram Chat ID для отправки логов
# Example: LOGGER_CHAT_ID=878829263
LOGGER_CHAT_ID=your_telegram_chat_id_here

# ========================================
# VK ID (авторизация через VK)
# ========================================
VK_APP_ID=your_vk_app_id
VK_ID_REDIRECT_URL=https://your-app.com/login/web

# ========================================
# YANDEX ID (авторизация через Yandex)
# ========================================
# ID приложения в OAuth-сервисе Yandex
YANDEX_CLIENT_ID=your_yandex_client_id
# Секрет приложения
YANDEX_CLIENT_SECRET=your_yandex_client_secret
# URL, на который Yandex вернёт пользователя после авторизации (должен совпадать с настройками в кабинете приложения)
# Example: http://localhost:3000/login/yandex/callback (страница ожидания авторизации)
YANDEX_CALLBACK_URL=http://127.0.0.1:3000/login/yandex/callback

# ========================================
# GOOGLE (авторизация через Google)
# ========================================
# Client ID из Google Cloud Console (OAuth 2.0)
GOOGLE_CLIENT_ID=your_google_client_id
# Секрет приложения (OAuth 2.0 Client Secret)
GOOGLE_CLIENT_SECRET=your_google_client_secret
# URL, на который Google вернёт пользователя после авторизации (должен совпадать с настройками в Google Cloud Console)
# Example: http://localhost:3000/login/google/callback
GOOGLE_CALLBACK_URL=http://127.0.0.1:3000/login/google/callback
