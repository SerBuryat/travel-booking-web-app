# ========================================
# SSH TUNNEL CONFIGURATION
# ========================================
# SSH server hostname or IP address
SSH_HOST=your-ssh-server.com

# SSH username
SSH_USER=your-ssh-username

# SSH password (если используете аутентификацию по паролю)
SSH_PASSWORD=your-ssh-password

# SSH private key (если используете аутентификацию по ключу)
# SSH_PRIVATE_KEY=-----BEGIN OPENSSH PRIVATE KEY-----
# ... your private key content ...
# -----END OPENSSH PRIVATE KEY-----

# ========================================
# POSTGRES DATABASE CONFIGURATION
# ========================================
# Database host from SSH server perspective (usually localhost)
DB_HOST=localhost

# Database port (usually 5432)
DB_PORT=5432

# Database username
DB_USER=db_user

# Database password
DB_PASSWORD=db_password

# Database name
DB_NAME=db_name

# ========================================
# PRISMA DATABASE URL
# ========================================
# This URL points to the local tunnel port (5432) that forwards to remote DB
# Format: postgresql://username:password@localhost:5432/database_name
DATABASE_URL="postgresql://${DB_USER}:${DB_PASSWORD}@localhost:5432/${DB_NAME}"

# ========================================
# NEXTJS ENVIRONMENT
# ========================================
# Set to 'development' for local dev, 'production' for production
NODE_ENV=production

# ========================================
# TELEGRAM BOT CONFIGURATION
# ========================================
# Telegram Bot Token from @BotFather
BOT_TOKEN=your_bot_token_here

# Telegram Bot Name (optional)
BOT_NAME=your_bot_name_here

# ========================================
# JWT AUTHENTICATION CONFIGURATION
# ========================================
# Secret key for JWT token signing (CHANGE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# JWT token expiration time (default: 1h)
JWT_EXPIRES_IN=1h

# Refresh token expiration time (default: 7d)
REFRESH_TOKEN_EXPIRES_IN=7d

# ========================================
# PRISMA LOGGING CONFIGURATION
# ========================================
# Prisma log levels (comma-separated): query, info, warn, error
# Examples:
# - PRISMA_LOG_LEVELS=error (only errors)
# - PRISMA_LOG_LEVELS=warn,error (warnings and errors)
# - PRISMA_LOG_LEVELS=query,info,warn,error (all logs)
PRISMA_LOG_LEVELS=error 